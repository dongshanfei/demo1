/* pages/player/player.wxss */

page {
    height: 100%;
}

.page {
    padding: 20rpx;
    position: relative;
    width: 100%;
    height: 100%;
    margin: auto;
    box-sizing: border-box;
}

.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.sliderWrap {
    box-sizing: border-box;
    width: 94%;
    position: absolute;
    bottom: 180rpx;
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.sliderWrap text {
    font-size: 25rpx;
    color: #fff;
}

slider {
    width: 90%;
    margin: 0 40rpx 0 50rpx;
}

.section {
    margin-top: 30rpx;
}

.section__title {
    font-size: 35rpx;
}

.section_gap {
    text-align: center;
}

.btn {
    position: absolute;
    bottom: 1%;
    width: 150rpx;
    height: 150rpx;
    left: 0rpx;
    right: 0;
    margin: auto;
}

.btn image {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}

.title {
    position: absolute;
    width: 80%;
    bottom: 25%;
    font-size: 35rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    left: 0;
    right: 0;
    margin: auto;
}

.center{
    position: absolute;
    width: 365rpx;
    top: 27%;
    left: 0;
    right: 0;
    margin: auto;
    border-radius: 50%;

}

.transform{
    animation:10s linear 0s myrotate infinite;
}
@keyframes myrotate{
    form {transform:rotateZ(0deg);}    
    to  {transform:rotateZ(360deg);}
}