/* pages/blessingList/blessingList.wxss */

.container{
  width: 100%;
  height: 100%;
  padding-top: 80rpx;
}
.wrapBox{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  overflow-y: hidden;
  overflow-x: scroll;
  z-index: 100;
  background-color: #fff;
}
.selectBox {
  /* display: flex;
  flex-direction: row; */
  width: 250%;
  border-bottom: 1rpx solid #eee;
}

.select {

  width:150rpx;
  height: 70rpx;
  display: inline-block;
  text-align: center;
  position: relative;
}

.selectText {
  display: inline-block;
   line-height: 70rpx;
  font-size: 30rpx;
  display: block;
  color: #9c9c9c;
}

.line {
  display: inline-block;
  width: 45rpx;
  height: 5rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  top: 60rpx;
  background-color: #e94f4f;
}

.cur {
  color: #e94f4f;
}
.item{
  padding: 30rpx 50rpx 30rpx 20rpx;
  font-size: 30rpx;
  color: #666;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.row{
  position: absolute;
  display: inline-block;
  text-align: center;
  width: 30rpx;
  height: 30rpx;
  top: 0;
  bottom: 0;
  right: 15rpx;
  margin: auto;
  color: #c7c7cc;
  font-weight: bold;
}