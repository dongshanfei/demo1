/* pages/changeInfo/changeInfo.wxss */
view{
  box-sizing: border-box;
}
.warp{
  width: 100%;
  height: 100%;
}
.changBox{
  display: flex;

  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.text{
  display: inline-block;
  font-size: 30rpx;
  color:#999999; 
  width: 150rpx;
  text-align: center;
  margin-right: 60rpx;
}
.imgWrap{
  position: relative;
   width: 100rpx;
  height: 100rpx;
}
.imgWrap image{
  width: 100rpx;
  height: 100rpx;
}
.change{
  position: absolute;
  left: 0;
  width: 100%;
  display: inline-block;
  bottom: 0;
  background-color: rgba(0,0,0,.7);
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 50rpx;
}

.x{
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}

.changBox input{
  font-size: 30rpx;
  width: 500rpx;
}
.areatitle{
  font-size: 30rpx;
  background-color: #eeeeee;
  width: 100%;
  line-height: 60rpx;
  display: block;
  padding-left: 20rpx;
  box-sizing: border-box;
  color: #aaaaaa;
}
.textarea{
  width: 90%;
  height: 250rpx;
  box-sizing: border-box;
  padding:40rpx 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  word-spacing: 50rpx;
  letter-spacing: 50rpx;

}
.recordingWrap image{
  width: 120rpx;
  height: 120rpx;
}
.textareaWrap{
  display: flex;
  align-items: center;
}
.recordWrap{
  width: 120rpx;
  height: 120rpx;
}
.listWrap{
  padding: 20rpx;
  font-size: 30rpx;
  background-color: #eeeeee;
  width: 100%;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #aaaaaa;
}
.goList{
  color: #e94f4f;
  text-decoration: underline;
}
.recordingWrap{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.recordingWrap image{
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.recordingWrap text{
  font-size: 30rpx;
  color: black;
}
.submitWrap{
  width: 100%;
  height: 300rpx;
  background-color: #eeeeee;
}
.submit{
  display: inline-block;
  margin-top: 30rpx;
  margin-left: 2.5%;
  width: 95%;
  color: #fff;
  background-color: #e94f4f;
}
.delete{
  display: inline-block;
  width: 80rpx;
  padding: 10rpx;
  border: 1rpx #e94f4f solid;
  text-align: center;
  color:#e94f4f!important;
  font-size: 30rpx;
  
}
.recordTip{
  width: 480rpx;
  margin-left: 20rpx;
}